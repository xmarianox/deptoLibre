<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:baselineAligned="false"
              android:gravity="center_horizontal">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="205dp"
        android:id="@+id/meli_img"
        android:src="@drawable/img_depto"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/description_img"
        android:layout_marginBottom="@dimen/default_margin"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$10"
            android:id="@+id/meli_price"
            style="@style/textPrecio"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lorem ipsum"
            android:id="@+id/meli_title"
            android:layout_toRightOf="@+id/meli_price"
            android:layout_alignParentTop="true"
            style="@style/textTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lorem ipsum"
            android:id="@+id/meli_description"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/meli_title"
            android:layout_alignStart="@+id/meli_title"
            style="@style/textSubTitle"/>

    </RelativeLayout>
</LinearLayout>
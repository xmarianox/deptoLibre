<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#4355d2"
                      android:endColor="#2f33ae"
                      android:angle="270" />

            <stroke android:width="1px"
                    android:color="#2d3277" />

            <corners android:radius="4dp"/>

            <padding android:left="10dp"
                     android:top="5dp"
                     android:right="10dp"
                     android:bottom="5dp" />
        </shape>
    </item><!-- Estado presionado  -->

    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#4355d2"
                      android:endColor="#2f33ae"
                      android:angle="270" />

            <stroke android:width="1px"
                    android:color="#2d3277" />

            <corners android:radius="4dp"/>

            <padding android:left="10dp"
                     android:top="5dp"
                     android:right="10dp"
                     android:bottom="5dp" />
        </shape>
    </item><!-- Estado on focus  -->

    <item>
        <shape>

            <gradient android:startColor="#3e52a1"
                      android:endColor="#2d3277"
                      android:angle="270" />

            <stroke android:width="1px"
                    android:color="#2d3277" />

            <corners android:radius="4dp" />

            <padding android:left="10dp"
                     android:top="5dp"
                     android:right="10dp"
                     android:bottom="5dp" />
        </shape>
    </item><!-- Estado por default  -->
</selector>